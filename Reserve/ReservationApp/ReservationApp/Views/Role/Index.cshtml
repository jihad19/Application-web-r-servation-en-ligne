@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of roles</h1>
<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>  
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <form method="post" asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id">
                    <a class="btn btn-primary text-white btn-sm" asp-action="Edit" asp-controller="Role" asp-route-id="@role.Id">Update</a>
                    <button type="submit" class="btn btn-dark btn-sm" onclick="return confirm('Are you sure ??')">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>


