@model ReservationApp.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Date" />
            <div hidden class="form-group">
                <label asp-for="TypeReservationid"></label>
                <select asp-for="TypeReservationid" class="form-control">
                    <option value="">Select Type...</option>
                    @foreach (TypeReservation type in ViewBag.Types)
                    {
                        <option value="@type.Id">@type.Nom (Limited: @type.Nombre)</option>
                    }

                </select>
                <span asp-validation-for="TypeReservation" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <select class="form-control custom-select"
                        asp-for="Status"
                        asp-items="Html.GetEnumSelectList<Status>()">
                    <option value="">Choisir Filiére ...</option>
                </select>
                <span asp-validation-for="Status" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
